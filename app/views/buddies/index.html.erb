
<div class = "cards" >

<% @buddies.each do |buddy| %>
  <div class="card-trip">
    <%= cl_image_tag(buddy.picture, secure: true) %>
    <div class="card-trip-infos">
      <div>
        <h2><%= link_to buddy.name, buddy_path(buddy) %></h2>
      </div>
  </div>
</div>

<% end %>
</div>
</div>

<div
  id="map"
  style="width: 100%;
  height: 400px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
/>
